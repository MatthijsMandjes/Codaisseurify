<%= form_for [@artist, @song] do |f| %>
    <% next_id = Song.pluck(:id).last %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, id: 'name'%>
    </div>
    <div class="form-group">
      <label>Price</label>
      <%= f.number_field :price, id: 'price' %>
    </div>
    <div class="form-group">
      <label>Activate</label>
      <%= f.text_field :active %>
    </div>
    <%= f.submit 'Save', id: 'addsong', class: 'addsongs', data: {artistid: @artist.id, songid: next_id } %>
  <%= link_to "Back", root_path %>
<% end %>
