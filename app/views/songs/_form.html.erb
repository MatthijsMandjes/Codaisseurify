<%= form_for [@artist, @song] do |f| %>

    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, id: 'name'%>
    </div>
    <div class="form-group">
      <label>Price</label>
      <%= f.number_field :price, id: 'price' %>
    </div>
    <div class="form-group">
      <label>Activate</label>
      <%= f.text_field :active %>
    </div>
    <%= f.submit 'Save', id: 'addsong', data: {artistid: @artist.id, songid: Song.maximum(:id).next} %>
  <%= link_to "Back", root_path %>
<% end %>
