<%= form_for [@artist, @song] do |f| %>

    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, id: 'name'%>
    </div>
    <div class="form-group">
      <label>Price</label>
      <%= f.number_field :price %>
    </div>
    <div class="form-group">
      <label>Activate</label>
      <%= f.text_field :active %>
    </div>
    <%= f.submit 'Save', id: @artist.id, onclick: 'createSong(this.id)' %>
  <%= link_to "Back", root_path %>
<% end %>
